<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="ngrok-indicator">
  <schema id="org.gnome.shell.extensions.ngrok-indicator" path="/org/gnome/shell/extensions/ngrok-indicator/">
    <key name="api-base-url" type="s">
      <default>'http://127.0.0.1:4040'</default>
      <summary>ngrok Local API Base URL</summary>
      <description>The base URL for the local ngrok agent API (usually http://127.0.0.1:4040).</description>
    </key>
    <key name="ngrok-binary-path" type="s">
      <default>'/usr/local/bin/ngrok'</default>
      <summary>ngrok Binary Path</summary>
      <description>Path to the ngrok executable.</description>
    </key>
    <key name="config-path" type="s">
      <default>''</default>
      <summary>ngrok Configuration File Path</summary>
      <description>Optional path to ngrok.yml.</description>
    </key>
    <key name="max-concurrent-tunnels" type="i">
      <default>0</default>
      <summary>Max Concurrent Tunnels</summary>
      <description>Maximum number of allowed tunnels (0=unknown, -1=unlimited).</description>
    </key>
  </schema>
</schemalist>
